{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/templates",
      "dest": "/api/templates_endpoint.py"
    },
    {
      "src": "/api/session/start",
      "dest": "/api/session_start.py"
    },
    {
      "src": "/api/session/(.*)/chat",
      "dest": "/api/chat.py"
    },
    {
      "src": "/api/session/(.*)/export",
      "dest": "/api/chat.py"
    },
    {
      "src": "/api/session/(.*)",
      "dest": "/api/chat.py"
    },
    {
      "src": "/api",
      "dest": "/api/index.py"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "LLM_PROVIDER": "openai",
    "LLM_MODEL": "gpt-4-turbo",
    "STORAGE_TYPE": "memory"
  }
}
