# LLM Provider (openai, anthropic, or windsurf)
LLM_PROVIDER=openai

# OpenAI API Key (krijg je van https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-api-key-here

# Anthropic API Key (optioneel, voor Claude)
ANTHROPIC_API_KEY=

# Windsurf API configuratie (optioneel)
# Als je Windsurf gebruikt, laat OPENAI_API_KEY leeg
WINDSURF_API_KEY=
WINDSURF_API_BASE=https://api.windsurf.ai/v1

# LLM Model
# Voor OpenAI: gpt-4-turbo, gpt-4o, gpt-3.5-turbo
# Voor Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229
# Voor Windsurf: check je Windsurf configuratie
LLM_MODEL=gpt-4-turbo

# Server configuratie
HOST=0.0.0.0
PORT=8000

# CORS (voor local development)
FRONTEND_URL=http://localhost:3000
